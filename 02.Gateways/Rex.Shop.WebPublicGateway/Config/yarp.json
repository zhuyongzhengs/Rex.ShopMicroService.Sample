    "Clusters": {
      "BaseServiceCluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:4455"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:03",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/HealthCheck"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:00:30",
            "Options": {
              "FailureRateLimit": 0.05, // 5% 的请求失败率认为不健康
              "MinimumRequestCount": 5 // 至少 5 次请求后开始评估
